  body.ng-cloak(ng-controller='SiteCtrl')    
    .header.container
      .pull-left.branding
        .logo
          a(href='/')
            img(src='assets/img/logo-thinkfun.gif')
        .logo
          img(src='assets/img/logo-brainlab.gif')
        .tagline
          img(src='assets/img/tagline.gif')
      .pull-right
        .social-links
          .icon.twitter-icon
            a.fc-webicon.twitter(href='https://twitter.com/TFBrainLab', target='_blank')
          .icon.googleplus-icon
            a.fc-webicon.googleplus(href='https://plus.google.com/108542670229733060205', target='_blank')
          .icon.facebook-icon
            a.fc-webicon.facebook(href='https://www.facebook.com/ThinkFunBrainLab', target='_blank')
        .account-login(data-ng-controller='LoginCtrl')
          form.form-inline(data-ng-submit='loginUser()', data-ng-hide='authenticated')
            .controls
              input.input-small.span2(type='text', name='userName', data-ng-model='username', placeholder='Username', required='required')
              input.input-small.span2(type='password', name='pwd', data-ng-model='password', placeholder='Password', required='required')
              button.btn.btn-small(type='submit') Log In
            .controls.controls-row
              label.checkbox.pull-left
                input(type='checkbox', value='true', name='saveUserSession', checked='checked')
                | Remember me
              span.forgotPasswordLink.pull-left
                a(style='cursor: pointer;', data-toggle='modal', bl-dialog-modal='/views/partials/modals/sendResetPassword.html', bl-dialog-context='sendResetPassword') Forgot my password
          .account-menu(data-ng-show='authenticated')
            .login
              span#account-menu-dropdown.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='#')
                  | Hello, {{ user.firstname }} {{ user.lastname }}
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/#/account') Account
                  li.divider
                  li
                    a(ng-click='logoutUser(user)', href='#') Log Out
    .container(ng-view='ng-view')
